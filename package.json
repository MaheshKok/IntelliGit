{
    "name": "intelligit",
    "displayName": "IntelliGit",
    "description": "IntelliJ-style Git experience for VS Code: commit graph, branch tree, commit details, and file change explorer.",
    "version": "0.1.0",
    "publisher": "intelligit",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaheshKok/intelligit-vscode"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "SCM Providers"
    ],
    "keywords": [
        "git",
        "intellij",
        "log",
        "graph",
        "scm"
    ],
    "activationEvents": [
        "workspaceContains:.git",
        "onView:intelligit.branches",
        "onView:intelligit.commitGraph",
        "onView:intelligit.commitFiles"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "intelligit",
                    "title": "IntelliGit",
                    "icon": "media/intelligit.svg"
                }
            ],
            "panel": [
                {
                    "id": "intelligitPanel",
                    "title": "IntelliGit",
                    "icon": "media/intelligit.svg"
                }
            ]
        },
        "views": {
            "intelligit": [
                {
                    "id": "intelligit.commitPanel",
                    "name": "Commit",
                    "type": "webview"
                },
                {
                    "id": "intelligit.branches",
                    "name": "Branches"
                }
            ],
            "intelligitPanel": [
                {
                    "id": "intelligit.commitGraph",
                    "name": "Commit Graph",
                    "type": "webview"
                },
                {
                    "id": "intelligit.commitFiles",
                    "name": "Changed Files",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "intelligit.showGitLog",
                "title": "Show Git Log",
                "category": "IntelliGit",
                "icon": "$(git-commit)"
            },
            {
                "command": "intelligit.refresh",
                "title": "Refresh",
                "category": "IntelliGit",
                "icon": "$(refresh)"
            },
            {
                "command": "intelligit.filterByBranch",
                "title": "Filter by Branch",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.checkout",
                "title": "Checkout",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.newBranchFrom",
                "title": "New Branch from...",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.checkoutAndRebase",
                "title": "Checkout and Rebase onto Current",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.compareWithCurrent",
                "title": "Compare with Current",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.showDiffWithWorkingTree",
                "title": "Show Diff with Working Tree",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.rebaseCurrentOnto",
                "title": "Rebase Current onto Selected",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.mergeIntoCurrent",
                "title": "Merge into Current",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.updateBranch",
                "title": "Update",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.pushBranch",
                "title": "Push",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.renameBranch",
                "title": "Rename...",
                "category": "IntelliGit"
            },
            {
                "command": "intelligit.deleteBranch",
                "title": "Delete",
                "category": "IntelliGit"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "intelligit.refresh",
                    "when": "view == intelligit.branches",
                    "group": "navigation"
                },
                {
                    "command": "intelligit.refresh",
                    "when": "view == intelligit.commitGraph",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "intelligit.checkout",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "1_checkout@1"
                },
                {
                    "command": "intelligit.newBranchFrom",
                    "when": "view == intelligit.branches && viewItem =~ /^(currentBranch|localBranch|remoteBranch)$/",
                    "group": "1_checkout@2"
                },
                {
                    "command": "intelligit.checkoutAndRebase",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "1_checkout@3"
                },
                {
                    "command": "intelligit.compareWithCurrent",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "2_compare@1"
                },
                {
                    "command": "intelligit.showDiffWithWorkingTree",
                    "when": "view == intelligit.branches && viewItem =~ /^(currentBranch|localBranch|remoteBranch)$/",
                    "group": "2_compare@2"
                },
                {
                    "command": "intelligit.rebaseCurrentOnto",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "3_merge@1"
                },
                {
                    "command": "intelligit.mergeIntoCurrent",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "3_merge@2"
                },
                {
                    "command": "intelligit.updateBranch",
                    "when": "view == intelligit.branches && viewItem =~ /^(currentBranch|localBranch|remoteBranch)$/",
                    "group": "4_remote@1"
                },
                {
                    "command": "intelligit.pushBranch",
                    "when": "view == intelligit.branches && viewItem =~ /^(currentBranch|localBranch)$/",
                    "group": "4_remote@2"
                },
                {
                    "command": "intelligit.renameBranch",
                    "when": "view == intelligit.branches && viewItem =~ /^(currentBranch|localBranch)$/",
                    "group": "5_modify@1"
                },
                {
                    "command": "intelligit.deleteBranch",
                    "when": "view == intelligit.branches && viewItem =~ /^(localBranch|remoteBranch)$/",
                    "group": "5_modify@2"
                }
            ]
        },
        "keybindings": [
            {
                "command": "intelligit.showGitLog",
                "key": "alt+9",
                "mac": "alt+9"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "bun scripts/build.js --production",
        "build": "bun scripts/build.js",
        "build:prod": "bun scripts/build.js --production",
        "watch": "bun scripts/watch.js",
        "format": "prettier --write \"src/**/*.{ts,tsx}\" \"scripts/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"scripts/**/*.js\"",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "test": "bun vitest run",
        "test:watch": "bun vitest",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish --no-dependencies"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^20.11.0",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/test-electron": "^2.3.9",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.20.0",
        "eslint": "^10.0.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^17.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.55.0",
        "vitest": "^1.2.0"
    },
    "dependencies": {
        "simple-git": "^3.22.0"
    }
}
